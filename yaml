                        subject: !ruby/object:Subject
                          original: 'RE: [MUD-Dev] Community Relations'
                        from: Matthew Mihaly <diablo@best.com>
                        references: []
                        date: 2000-01-30 21:32:48.000000000 Z
                        no_archive: false
                      call_number: !ruby/object:CallNumber
                        str: 000Dntr6
                      source: archive
                      list: !ruby/object:List
                        slug: mud-dev
                        name: 
