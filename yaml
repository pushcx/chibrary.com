            subject: !ruby/object:Subject
              original: 'Re: [MUD-Dev] Storing tokens with flex & bison'
            from: Dominic J. Eidson <sauron@the-infinite.org>
            references: []
            date: 2000-01-07 22:13:53.000000000 Z
            no_archive: false
          call_number: !ruby/object:CallNumber
